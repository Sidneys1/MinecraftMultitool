<Window x:Class="StackingEntities.Desktop.View.Windows.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="350" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Icon="/StackingEntities;component/CommandBlock.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="15" Source="/StackingEntities;component/CommandBlock.ico" Stretch="None" StretchDirection="DownOnly"/>
		<StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Orientation="Vertical">
			<Label Content="Minecraft Summon Generator" FontSize="12" HorizontalAlignment="Center"/>
			<TextBlock>
				(c) 2014-2015 Sidneys1<LineBreak/>
				Thanks to everyone at Mojang!<LineBreak/>
				<LineBreak/>
				Coming Soon:<LineBreak/>
				Minecart Spawner options
			</TextBlock>
		</StackPanel>

	</Grid>
</Window>
